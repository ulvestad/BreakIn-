<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="xyz.tdt4240.breakin"
    android:versionCode="1"
    android:versionName="1.0" >
    
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:name=".application.BreakInApplication">

        <meta-data android:name="DATABASE" android:value="break_in.db" />
        <meta-data android:name="VERSION" android:value="2" />
        <meta-data android:name="QUERY_LOG" android:value="false" />
        <meta-data android:name="DOMAIN_PACKAGE_NAME" android:value="xyz.tdt4240" />

        <activity
            android:name="xyz.tdt4240.breakin.activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/MaterialTheme.NoBar">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity android:name=".activities.AboutActivity"
            android:label="@string/about_activity_title" />


        <activity android:name=".activities.GameActivity"
            android:theme="@style/GdxTheme"/>

    </application>

</manifest>
